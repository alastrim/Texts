\newcommand*\statcircle{
    \tikz\draw (0,0) circle (1ex);
}

\newcommand*\filledstatcircle{
    \tikz\draw[black, fill=black] (0,0) circle (1ex);
}

\newcommand{\stat}[1]{%
   \FPeval{\mod}{(#1 - 10)/2}%
   \FPifpos\mod%
   \FPeval{\mod}{clip(trunc(mod,0))}#1 (+\mod)%
   \else%
   \FPeval{\mod}{clip(trunc(mod-0.5,0))}#1 (\mod)%
   \fi%
}

